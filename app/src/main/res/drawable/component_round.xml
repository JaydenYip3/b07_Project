<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Outer Shadow -->
    <item>
        <shape android:shape="rectangle">
            <padding android:top="2dp" android:left="2dp"></padding>
            <solid android:color="#f5f5f6" /> <!-- Shadow color -->
            <corners android:radius="16dp" /> <!-- Match the card corner radius -->
        </shape>
    </item>

    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#ededef" /> <!-- Light highlight color -->
            <corners android:radius="16dp" /> <!-- Match corner radius -->
        </shape>
    </item>

    <!-- Inner Card -->
    <item android:top="0dp" android:left="0dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#fafafa"
                android:endColor="#FFFF"
                android:type="linear"
                android:gradientRadius="90dp"
                /><!-- Card background color -->
            <corners android:radius="16dp" /> <!-- Card corners -->
        </shape>
    </item>
</layer-list>
