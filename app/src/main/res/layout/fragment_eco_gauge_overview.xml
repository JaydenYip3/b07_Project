<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="147dp"
        android:layout_height="68dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="planetze logo"
        android:src="@drawable/planetze_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You've emitted [insert number] kg CO2e this [week/month/year]."
        android:textColor="@color/dark_bluegray"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="319dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eco Gauge Overview"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/dark_bluegray"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/graphByCategoryButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal"
        android:text="Breakdown by Category"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="435dp" />

    <Button
        android:id="@+id/emissionsTrendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal"
        android:text="Emissions Trend"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="502dp" />

    <Button
        android:id="@+id/comparisonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal"
        android:text="Compare to National/Global Average"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="572dp" />

    <Spinner
        android:id="@+id/timeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="274dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select Time Period"
        android:textColor="@color/dark_bluegray"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="240dp" />

</androidx.constraintlayout.widget.ConstraintLayout>